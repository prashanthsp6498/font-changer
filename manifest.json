{
    "manifest_version": 3,
    "name": "Font Changer",
    "version": "0.0.1",
    "description": "An extension to change the font of the page based on available fonts",
    "action":{
        "default_popup": "popup.html"
    },
    "permissions":["activeTab", "scripting"],
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["override.js"]

        } 
   ],
   "icons": {
    "16": "icons/fc_icon.png",
    "48": "icons/fc_icon.png"
  }
}
